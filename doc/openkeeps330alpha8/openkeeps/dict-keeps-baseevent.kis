#更新準備完了(OnUpdateReady)---------------------------------------------------

event.OnUpdateReady : $(
	setFreeze;
	.setstr UpdateFileTotal $(AdjustOrigin $(NonNegReference 0));
	if $[ $(SReference 3) == "" || $(SReference 3) == "ghost" ] $(
		TalkSearch "kp.onupdateready";
	) else $(
		TalkSearch "kp.onupdateready.system";
	);
)

kp.onupdateready (
