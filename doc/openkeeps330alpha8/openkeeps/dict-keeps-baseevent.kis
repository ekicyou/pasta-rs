kp.EntryToProtect (
	kp.onupdatecomplete.none,
	kp.onupdatecomplete1,
	kp.onupdatecomplete.changed,
	kp.onupdatecomplete2
)

#更新失敗(OnUpdateFailure)-----------------------------------------------------

event.OnUpdateFailure : $(
	resetFreeze;
	TalkSearch $(
		if $[ $(SReference 3) == "" || $(SReference 3) == "ghost" ]
			"kp.dataupdateerror1"
		else
			"kp.dateupdateerror2"
	);
	.clear UpdateFileNo;
	.clear UpdateFileTotal;
)

